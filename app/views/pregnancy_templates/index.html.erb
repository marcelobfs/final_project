<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pregnancies
    </h1>

    <a href="/pregnancies/new" class="btn btn-block btn-outline-secondary">
      Add a new pregnancy
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          Bull name
        </th>

        <th>
          Born
        </th>

        <th>
          Cattle
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pregnancies.each do |pregnancy| %>
      <tr>
        <!-- Display pregnancy.id start -->
        <td>
          <%= pregnancy.id %>
        </td>
        <!-- Display pregnancy.id end -->

        <!-- Display pregnancy.earring_id start -->
        <td>
          <%= pregnancy.earring_id %>
        </td>
        <!-- Display pregnancy.earring_id end -->

        <!-- Display pregnancy.bull_name start -->
        <td>
          <%= pregnancy.bull_name %>
        </td>
        <!-- Display pregnancy.bull_name end -->

        <!-- Display pregnancy.born start -->
        <td>
          <%= pregnancy.born %>
        </td>
        <!-- Display pregnancy.born end -->

        <!-- Display pregnancy.cattle_id start -->
        <td>
          <% if pregnancy.cattle.present? %>
            <a href="/cattle_catalogs/<%= pregnancy.cattle.id %>">
              <%= pregnancy.cattle.earring_id %>
            </a>
          <% end %>
        </td>
        <!-- Display pregnancy.cattle_id end -->

        <!-- Display pregnancy.created_at start -->
        <td>
          <%= time_ago_in_words(pregnancy.created_at) %> ago
        </td>
        <!-- Display pregnancy.created_at end -->

        <!-- Display pregnancy.updated_at start -->
        <td>
          <%= time_ago_in_words(pregnancy.updated_at) %> ago
        </td>
        <!-- Display pregnancy.updated_at end -->

        <td>
          <a href="/pregnancies/<%= pregnancy.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pregnancies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
