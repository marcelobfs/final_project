<h1>
  Add a new pregnancy
</h1>


<hr>

<form action="/create_pregnancy" method="post">

  <div class="form-group">
    <label for="earring_id">
      Earring
    </label>

    <input type="text" id="earring_id" name="earring_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="bull_name">
      Bull name
    </label>

    <input type="text" id="bull_name" name="bull_name" class="form-control">
  </div>

  <div class="form-group">
    <label for="born">
      Born
    </label>

    <input type="text" id="born" name="born" class="form-control">
  </div>

  <div class="form-group">
    <label for="cattle_id">
      Cattle
    </label>

    <%= select_tag(:cattle_id, options_from_collection_for_select(CattleCatalog.all, :id, :earring_id, @pregnancy.cattle_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create pregnancy
  </button>
</form>

<hr>

<a href="/pregnancies">
  Go back
</a>
