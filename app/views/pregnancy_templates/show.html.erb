<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pregnancy #<%= @pregnancy.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pregnancies" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link pregnancy start -->
      <div class="col">
        <a href="/pregnancies/<%= @pregnancy.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit pregnancy
        </a>
      </div>
      <!-- Edit link pregnancy end -->

      <!-- Delete link pregnancy start -->
      <div class="col">
        <a href="/delete_pregnancy/<%= @pregnancy.id %>" class="btn btn-block btn-outline-secondary">
          Delete pregnancy
        </a>
      </div>
      <!-- Delete link pregnancy end -->
    </div>

    <dl>
      <dt>
        Earring
      </dt>
      <!-- Display earring_id start -->
      <dd>
        <%= @pregnancy.earring_id %>
      </dd>
      <!-- Display earring_id end -->

      <dt>
        Bull name
      </dt>
      <!-- Display bull_name start -->
      <dd>
        <%= @pregnancy.bull_name %>
      </dd>
      <!-- Display bull_name end -->

      <dt>
        Born
      </dt>
      <!-- Display born start -->
      <dd>
        <%= @pregnancy.born %>
      </dd>
      <!-- Display born end -->

      <dt>
        Cattle
      </dt>
      <!-- Display cattle_id start -->
      <dd>
        <%= @pregnancy.cattle_id %>
      </dd>
      <!-- Display cattle_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@pregnancy.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@pregnancy.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
