<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All deaths
    </h1>

    <a href="/deaths/new" class="btn btn-block btn-outline-secondary">
      Add a new death
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "death_templates/deaths_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          Cause
        </th>

        <th>
          Cattle
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @deaths.each do |death| %>
      <tr>
        <td>
          <%= death.id %>
        </td>

        <td>
          <%= death.earring_id %>
        </td>

        <td>
          <%= death.cause %>
        </td>

        <td>
          <% if death.cattle.present? %>
            <a href="/cattle_catalogs/<%= death.cattle.id %>">
              <%= death.cattle.earring_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(death.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(death.updated_at) %> ago
        </td>

        <td>
          <a href="/deaths/<%= death.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @deaths, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
