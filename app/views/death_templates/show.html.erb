<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Death #<%= @death.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/deaths" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link death start -->
      <div class="col">
        <a href="/deaths/<%= @death.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit death
        </a>
      </div>
      <!-- Edit link death end -->

      <!-- Delete link death start -->
      <div class="col">
        <a href="/delete_death/<%= @death.id %>" class="btn btn-block btn-outline-secondary">
          Delete death
        </a>
      </div>
      <!-- Delete link death end -->
    </div>

    <dl>
      <dt>
        Earring
      </dt>
      <!-- Display earring_id start -->
      <dd>
        <%= @death.earring_id %>
      </dd>
      <!-- Display earring_id end -->

      <dt>
        Cause
      </dt>
      <!-- Display cause start -->
      <dd>
        <%= @death.cause %>
      </dd>
      <!-- Display cause end -->

      <dt>
        Cattle
      </dt>
      <!-- Display cattle_id start -->
      <dd>
        <% if @death.cattle.present? %>
          <a href="/cattle_catalogs/<%= @death.cattle_id %>">
            <%= @death.cattle.earring_id %>
          </a>
        <% end %>
      </dd>
      <!-- Display cattle_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@death.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@death.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
