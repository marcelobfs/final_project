<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Death #<%= @death.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/deaths" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/deaths/<%= @death.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit death
        </a>
      </div>

      <div class="col">
        <a href="/delete_death/<%= @death.id %>" class="btn btn-block btn-outline-secondary">
          Delete death
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Earring
      </dt>
      <dd>
        <%= @death.earring_id %>
      </dd>

      <dt>
        Cause
      </dt>
      <dd>
        <%= @death.cause %>
      </dd>

      <dt>
        Cattle
      </dt>
      <dd>
        <% if @death.cattle.present? %>
          <a href="/cattle_catalogs/<%= @death.cattle_id %>">
            <%= @death.cattle.earring_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@death.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@death.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

