<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Weighting #<%= @weighting.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/weightings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/weightings/<%= @weighting.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit weighting
        </a>
      </div>

      <div class="col">
        <a href="/delete_weighting/<%= @weighting.id %>" class="btn btn-block btn-outline-secondary">
          Delete weighting
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Earring
      </dt>
      <dd>
        <%= @weighting.earring_id %>
      </dd>

      <dt>
        Weight
      </dt>
      <dd>
        <%= @weighting.weight %>
      </dd>

      <dt>
        Cattle
      </dt>
      <dd>
        <% if @weighting.cattle.present? %>
          <a href="/cattle_catalogs/<%= @weighting.cattle_id %>">
            <%= @weighting.cattle.earring_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Lot
      </dt>
      <dd>
        <%= @weighting.lot %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@weighting.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@weighting.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

