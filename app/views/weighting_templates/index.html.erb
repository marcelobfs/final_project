<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All weightings
    </h1>

    <a href="/weightings/new" class="btn btn-block btn-outline-secondary">
      Add a new weighting
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "weighting_templates/weightings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          Weight
        </th>

        <th>
          Cattle
        </th>

        <th>
          Lot
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @weightings.each do |weighting| %>
      <tr>
        <td>
          <%= weighting.id %>
        </td>

        <td>
          <%= weighting.earring_id %>
        </td>

        <td>
          <%= weighting.weight %>
        </td>

        <td>
          <% if weighting.cattle.present? %>
            <a href="/cattle_catalogs/<%= weighting.cattle.id %>">
              <%= weighting.cattle.earring_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= weighting.lot %>
        </td>

        <td>
          <%= time_ago_in_words(weighting.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(weighting.updated_at) %> ago
        </td>

        <td>
          <a href="/weightings/<%= weighting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @weightings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
