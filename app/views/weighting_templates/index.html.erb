<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All weightings
    </h1>

    <a href="/weightings/new" class="btn btn-block btn-outline-secondary">
      Add a new weighting
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          Weight
        </th>

        <th>
          Cattle
        </th>

        <th>
          Lot
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @weightings.each do |weighting| %>
      <tr>
        <!-- Display weighting.id start -->
        <td>
          <%= weighting.id %>
        </td>
        <!-- Display weighting.id end -->

        <!-- Display weighting.earring_id start -->
        <td>
          <%= weighting.earring_id %>
        </td>
        <!-- Display weighting.earring_id end -->

        <!-- Display weighting.weight start -->
        <td>
          <%= weighting.weight %>
        </td>
        <!-- Display weighting.weight end -->

        <!-- Display weighting.cattle_id start -->
        <td>
          <%= weighting.cattle.earring_id %>
        </td>
        <!-- Display weighting.cattle_id end -->

        <!-- Display weighting.lot start -->
        <td>
          <%= weighting.lot %>
        </td>
        <!-- Display weighting.lot end -->

        <!-- Display weighting.created_at start -->
        <td>
          <%= time_ago_in_words(weighting.created_at) %> ago
        </td>
        <!-- Display weighting.created_at end -->

        <!-- Display weighting.updated_at start -->
        <td>
          <%= time_ago_in_words(weighting.updated_at) %> ago
        </td>
        <!-- Display weighting.updated_at end -->

        <td>
          <a href="/weightings/<%= weighting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
