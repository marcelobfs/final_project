<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All temp weanings
    </h1>

    <a href="/temp_weanings/new" class="btn btn-block btn-outline-secondary">
      Add a new temp weaning
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          First weight
        </th>

        <th>
          Estimated price per kilo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @temp_weanings.each do |temp_weaning| %>
      <tr>
        <!-- Display temp_weaning.id start -->
        <td>
          <%= temp_weaning.id %>
        </td>
        <!-- Display temp_weaning.id end -->

        <!-- Display temp_weaning.earring_id start -->
        <td>
          <%= temp_weaning.earring_id %>
        </td>
        <!-- Display temp_weaning.earring_id end -->

        <!-- Display temp_weaning.first_weight start -->
        <td>
          <%= temp_weaning.first_weight %>
        </td>
        <!-- Display temp_weaning.first_weight end -->

        <!-- Display temp_weaning.estimated_price_per_kilo start -->
        <td>
          <%= temp_weaning.estimated_price_per_kilo %>
        </td>
        <!-- Display temp_weaning.estimated_price_per_kilo end -->

        <!-- Display temp_weaning.created_at start -->
        <td>
          <%= time_ago_in_words(temp_weaning.created_at) %> ago
        </td>
        <!-- Display temp_weaning.created_at end -->

        <!-- Display temp_weaning.updated_at start -->
        <td>
          <%= time_ago_in_words(temp_weaning.updated_at) %> ago
        </td>
        <!-- Display temp_weaning.updated_at end -->

        <td>
          <a href="/temp_weanings/<%= temp_weaning.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @temp_weanings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
