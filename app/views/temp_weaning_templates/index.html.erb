<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All temp weanings
    </h1>

    <a href="/temp_weanings/new" class="btn btn-block btn-outline-secondary">
      Add a new temp weaning
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "temp_weaning_templates/temp_weanings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          First weight
        </th>

        <th>
          Estimated price per kilo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @temp_weanings.each do |temp_weaning| %>
      <tr>
        <td>
          <%= temp_weaning.id %>
        </td>

        <td>
          <%= temp_weaning.earring_id %>
        </td>

        <td>
          <%= temp_weaning.first_weight %>
        </td>

        <td>
          <%= temp_weaning.estimated_price_per_kilo %>
        </td>

        <td>
          <%= time_ago_in_words(temp_weaning.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(temp_weaning.updated_at) %> ago
        </td>

        <td>
          <a href="/temp_weanings/<%= temp_weaning.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @temp_weanings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
