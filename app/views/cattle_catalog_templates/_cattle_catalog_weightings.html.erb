<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Weightings

    <a data-toggle="collapse" href="#cattle_catalog_weightings_new_form">
      Add weighting
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cattle_catalog.weightings.each do |weighting| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/weightings/<%= weighting.id %>">
          <%= weighting.earring_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_weighting_from_cattle/<%= weighting.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cattle_catalog_weightings_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "cattle_catalog_templates/cattle_catalog_weightings_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
