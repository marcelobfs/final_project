<form action="/create_weighting_from_cattle_catalog" method="post">

  <div class="form-group">
    <label for="earring_id">
      Earring
    </label>

    <input type="text" id="earring_id" name="earring_id" class="form-control" value="<%= @weighting.earring_id %>">
  </div>

  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <input type="text" id="weight" name="weight" class="form-control" value="<%= @weighting.weight %>">
  </div>

  <input type="hidden" name="cattle_id" value="<%= @cattle_catalog.id %>">

  <div class="form-group">
    <label for="lot">
      Lot
    </label>

    <input type="text" id="lot" name="lot" class="form-control" value="<%= @weighting.lot %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create weighting
  </button>
</form>
