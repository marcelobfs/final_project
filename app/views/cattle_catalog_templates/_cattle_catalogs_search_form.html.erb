          <%= f.text_field :purchase_or_weaning_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Purchase or weaning date less than or equal to", :data => {:target => '#purchase_or_weaning_datelteqPicker'} %>
          <div class="input-group-append" data-target='#purchase_or_weaning_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
