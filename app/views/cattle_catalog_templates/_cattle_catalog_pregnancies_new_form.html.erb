<form action="/create_pregnancy_from_cattle_catalog" method="post">

  <div class="form-group">
    <label for="earring_id">
      Earring
    </label>

    <input type="text" id="earring_id" name="earring_id" class="form-control" value="<%= @pregnancy.earring_id %>">
  </div>

  <div class="form-group">
    <label for="bull_name">
      Bull name
    </label>

    <input type="text" id="bull_name" name="bull_name" class="form-control" value="<%= @pregnancy.bull_name %>">
  </div>

  <div class="form-group">
    <label for="born">
      Born
    </label>

    <input type="text" id="born" name="born" class="form-control" value="<%= @pregnancy.born %>">
  </div>

  <input type="hidden" name="cattle_id" value="<%= @cattle_catalog.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create pregnancy
  </button>
</form>
