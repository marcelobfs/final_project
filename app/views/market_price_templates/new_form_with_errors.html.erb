<!-- Validation failure messages -->
<% if @market_price.present? %>
  <% if @market_price.errors.any? %>
    <% @market_price.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new market price
</h1>


<hr>

<!-- Form market_price start -->
<form action="/create_market_price" method="post">
<!-- Form market_price end -->

  <!-- Label and input for observation start -->
  <div class="form-group">
    <label for="observation">
      Observation
    </label>

    <!-- Input for observation start -->
    <input type="text" id="observation" name="observation" class="form-control" value="<%= @market_price.observation %>">
    <!-- Input for observation end -->
  </div>
  <!-- Label and input for observation end -->

  <!-- Label and input for gender start -->
  <div class="form-group">
    <label for="gender">
      Gender
    </label>

    <!-- Input for gender start -->
    <input type="text" id="gender" name="gender" class="form-control" value="<%= @market_price.gender %>">
    <!-- Input for gender end -->
  </div>
  <!-- Label and input for gender end -->

  <!-- Label and input for current_price start -->
  <div class="form-group">
    <label for="current_price">
      Current price
    </label>

    <!-- Input for current_price start -->
    <input type="text" id="current_price" name="current_price" class="form-control" value="<%= @market_price.current_price %>">
    <!-- Input for current_price end -->
  </div>
  <!-- Label and input for current_price end -->

  <!-- Label and input for thirty_days_price start -->
  <div class="form-group">
    <label for="thirty_days_price">
      Thirty days price
    </label>

    <!-- Input for thirty_days_price start -->
    <input type="text" id="thirty_days_price" name="thirty_days_price" class="form-control" value="<%= @market_price.thirty_days_price %>">
    <!-- Input for thirty_days_price end -->
  </div>
  <!-- Label and input for thirty_days_price end -->

  <!-- Label and input for age_group start -->
  <div class="form-group">
    <label for="age_group">
      Age group
    </label>

    <!-- Input for age_group start -->
    <input type="text" id="age_group" name="age_group" class="form-control" value="<%= @market_price.age_group %>">
    <!-- Input for age_group end -->
  </div>
  <!-- Label and input for age_group end -->

  <button class="btn btn-block btn-outline-secondary">
    Create market price
  </button>
</form>

<hr>

<a href="/market_prices">
  Go back
</a>
