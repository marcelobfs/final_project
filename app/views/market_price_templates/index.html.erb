<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All market prices
    </h1>

    <a href="/market_prices/new" class="btn btn-block btn-outline-secondary">
      Add a new market price
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Observation
        </th>

        <th>
          Gender
        </th>

        <th>
          Current price
        </th>

        <th>
          Thirty days price
        </th>

        <th>
          Age group
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @market_prices.each do |market_price| %>
      <tr>
        <!-- Display market_price.id start -->
        <td>
          <%= market_price.id %>
        </td>
        <!-- Display market_price.id end -->

        <!-- Display market_price.observation start -->
        <td>
          <%= market_price.observation %>
        </td>
        <!-- Display market_price.observation end -->

        <!-- Display market_price.gender start -->
        <td>
          <%= market_price.gender %>
        </td>
        <!-- Display market_price.gender end -->

        <!-- Display market_price.current_price start -->
        <td>
          <%= market_price.current_price %>
        </td>
        <!-- Display market_price.current_price end -->

        <!-- Display market_price.thirty_days_price start -->
        <td>
          <%= market_price.thirty_days_price %>
        </td>
        <!-- Display market_price.thirty_days_price end -->

        <!-- Display market_price.age_group start -->
        <td>
          <%= market_price.age_group %>
        </td>
        <!-- Display market_price.age_group end -->

        <!-- Display market_price.created_at start -->
        <td>
          <%= time_ago_in_words(market_price.created_at) %> ago
        </td>
        <!-- Display market_price.created_at end -->

        <!-- Display market_price.updated_at start -->
        <td>
          <%= time_ago_in_words(market_price.updated_at) %> ago
        </td>
        <!-- Display market_price.updated_at end -->

        <td>
          <a href="/market_prices/<%= market_price.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
