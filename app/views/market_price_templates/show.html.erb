<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Market price #<%= @market_price.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/market_prices" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link market_price start -->
      <div class="col">
        <a href="/market_prices/<%= @market_price.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit market price
        </a>
      </div>
      <!-- Edit link market_price end -->

      <!-- Delete link market_price start -->
      <div class="col">
        <a href="/delete_market_price/<%= @market_price.id %>" class="btn btn-block btn-outline-secondary">
          Delete market price
        </a>
      </div>
      <!-- Delete link market_price end -->
    </div>

    <dl>
      <dt>
        Observation
      </dt>
      <!-- Display observation start -->
      <dd>
        <%= @market_price.observation %>
      </dd>
      <!-- Display observation end -->

      <dt>
        Gender
      </dt>
      <!-- Display gender start -->
      <dd>
        <%= @market_price.gender %>
      </dd>
      <!-- Display gender end -->

      <dt>
        Current price
      </dt>
      <!-- Display current_price start -->
      <dd>
        <%= @market_price.current_price %>
      </dd>
      <!-- Display current_price end -->

      <dt>
        Thirty days price
      </dt>
      <!-- Display thirty_days_price start -->
      <dd>
        <%= @market_price.thirty_days_price %>
      </dd>
      <!-- Display thirty_days_price end -->

      <dt>
        Age group
      </dt>
      <!-- Display age_group start -->
      <dd>
        <%= @market_price.age_group %>
      </dd>
      <!-- Display age_group end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@market_price.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@market_price.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
