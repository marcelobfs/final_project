<% if @activity_log.present? %>
  <% if @activity_log.errors.any? %>
    <% @activity_log.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new activity log
</h1>


<hr>

<form action="/create_activity_log" method="post">

  <div class="form-group">
    <label for="user_name">
      User name
    </label>

    <input type="text" id="user_name" name="user_name" class="form-control" value="<%= @activity_log.user_name %>">
  </div>

  <div class="form-group">
    <label for="action">
      Action
    </label>

    <input type="text" id="action" name="action" class="form-control" value="<%= @activity_log.action %>">
  </div>

  <div class="form-group">
    <label for="activity_description">
      Activity description
    </label>

    <input type="text" id="activity_description" name="activity_description" class="form-control" value="<%= @activity_log.activity_description %>">
  </div>

  <div class="form-group">
    <label for="file_name">
      File name
    </label>

    <input type="text" id="file_name" name="file_name" class="form-control" value="<%= @activity_log.file_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create activity log
  </button>
</form>

<hr>

<a href="/activity_logs">
  Go back
</a>
