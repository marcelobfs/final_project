<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All activity logs
    </h1>

    <a href="/activity_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new activity log
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User name
        </th>

        <th>
          Action
        </th>

        <th>
          Activity description
        </th>

        <th>
          File name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @activity_logs.each do |activity_log| %>
      <tr>
        <!-- Display activity_log.id start -->
        <td>
          <%= activity_log.id %>
        </td>
        <!-- Display activity_log.id end -->

        <!-- Display activity_log.user_name start -->
        <td>
          <%= activity_log.user_name %>
        </td>
        <!-- Display activity_log.user_name end -->

        <!-- Display activity_log.action start -->
        <td>
          <%= activity_log.action %>
        </td>
        <!-- Display activity_log.action end -->

        <!-- Display activity_log.activity_description start -->
        <td>
          <%= activity_log.activity_description %>
        </td>
        <!-- Display activity_log.activity_description end -->

        <!-- Display activity_log.file_name start -->
        <td>
          <%= activity_log.file_name %>
        </td>
        <!-- Display activity_log.file_name end -->

        <!-- Display activity_log.created_at start -->
        <td>
          <%= time_ago_in_words(activity_log.created_at) %> ago
        </td>
        <!-- Display activity_log.created_at end -->

        <!-- Display activity_log.updated_at start -->
        <td>
          <%= time_ago_in_words(activity_log.updated_at) %> ago
        </td>
        <!-- Display activity_log.updated_at end -->

        <td>
          <a href="/activity_logs/<%= activity_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
