<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All activity logs
    </h1>

    <a href="/activity_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new activity log
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "activity_log_templates/activity_logs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User name
        </th>

        <th>
          Action
        </th>

        <th>
          Activity description
        </th>

        <th>
          File name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @activity_logs.each do |activity_log| %>
      <tr>
        <td>
          <%= activity_log.id %>
        </td>

        <td>
          <%= activity_log.user_name %>
        </td>

        <td>
          <%= activity_log.action %>
        </td>

        <td>
          <%= activity_log.activity_description %>
        </td>

        <td>
          <%= activity_log.file_name %>
        </td>

        <td>
          <%= time_ago_in_words(activity_log.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(activity_log.updated_at) %> ago
        </td>

        <td>
          <a href="/activity_logs/<%= activity_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @activity_logs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
