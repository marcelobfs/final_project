<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cattle sales
    </h1>

    <a href="/cattle_sales/new" class="btn btn-block btn-outline-secondary">
      Add a new cattle sale
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cattle_sale_templates/cattle_sales_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Weight
        </th>

        <th>
          Price per kilo
        </th>

        <th>
          Earring
        </th>

        <th>
          Cattle
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cattle_sales.each do |cattle_sale| %>
      <tr>
        <!-- Display cattle_sale.id start -->
        <td>
          <%= cattle_sale.id %>
        </td>
        <!-- Display cattle_sale.id end -->

        <!-- Display cattle_sale.weight start -->
        <td>
          <%= cattle_sale.weight %>
        </td>
        <!-- Display cattle_sale.weight end -->

        <!-- Display cattle_sale.price_per_kilo start -->
        <td>
          <%= cattle_sale.price_per_kilo %>
        </td>
        <!-- Display cattle_sale.price_per_kilo end -->

        <!-- Display cattle_sale.earring_id start -->
        <td>
          <%= cattle_sale.earring_id %>
        </td>
        <!-- Display cattle_sale.earring_id end -->

        <!-- Display cattle_sale.cattle_id start -->
        <td>
          <% if cattle_sale.cattle.present? %>
            <a href="/cattle_catalogs/<%= cattle_sale.cattle.id %>">
              <%= cattle_sale.cattle.earring_id %>
            </a>
          <% end %>
        </td>
        <!-- Display cattle_sale.cattle_id end -->

        <!-- Display cattle_sale.created_at start -->
        <td>
          <%= time_ago_in_words(cattle_sale.created_at) %> ago
        </td>
        <!-- Display cattle_sale.created_at end -->

        <!-- Display cattle_sale.updated_at start -->
        <td>
          <%= time_ago_in_words(cattle_sale.updated_at) %> ago
        </td>
        <!-- Display cattle_sale.updated_at end -->

        <td>
          <a href="/cattle_sales/<%= cattle_sale.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cattle_sales, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
