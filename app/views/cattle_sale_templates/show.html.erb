<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Cattle sale #<%= @cattle_sale.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/cattle_sales" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link cattle_sale start -->
      <div class="col">
        <a href="/cattle_sales/<%= @cattle_sale.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit cattle sale
        </a>
      </div>
      <!-- Edit link cattle_sale end -->

      <!-- Delete link cattle_sale start -->
      <div class="col">
        <a href="/delete_cattle_sale/<%= @cattle_sale.id %>" class="btn btn-block btn-outline-secondary">
          Delete cattle sale
        </a>
      </div>
      <!-- Delete link cattle_sale end -->
    </div>

    <dl>
      <dt>
        Weight
      </dt>
      <!-- Display weight start -->
      <dd>
        <%= @cattle_sale.weight %>
      </dd>
      <!-- Display weight end -->

      <dt>
        Price per kilo
      </dt>
      <!-- Display price_per_kilo start -->
      <dd>
        <%= @cattle_sale.price_per_kilo %>
      </dd>
      <!-- Display price_per_kilo end -->

      <dt>
        Earring
      </dt>
      <!-- Display earring_id start -->
      <dd>
        <%= @cattle_sale.earring_id %>
      </dd>
      <!-- Display earring_id end -->

      <dt>
        Cattle
      </dt>
      <!-- Display cattle_id start -->
      <dd>
        <%= @cattle_sale.cattle_id %>
      </dd>
      <!-- Display cattle_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@cattle_sale.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@cattle_sale.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
