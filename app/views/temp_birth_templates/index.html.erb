<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Earring
        </th>

        <th>
          Gender
        </th>

        <th>
          Mother earring
        </th>

        <th>
          Race
        </th>

        <th>
          Birthdate
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @temp_births.each do |temp_birth| %>
      <tr>
        <!-- Display temp_birth.id start -->
        <td>
          <%= temp_birth.id %>
        </td>
        <!-- Display temp_birth.id end -->

        <!-- Display temp_birth.earring_id start -->
        <td>
          <%= temp_birth.earring_id %>
        </td>
        <!-- Display temp_birth.earring_id end -->

        <!-- Display temp_birth.gender start -->
        <td>
          <%= temp_birth.gender %>
        </td>
        <!-- Display temp_birth.gender end -->

        <!-- Display temp_birth.mother_earring_id start -->
        <td>
          <%= temp_birth.mother_earring_id %>
        </td>
        <!-- Display temp_birth.mother_earring_id end -->

        <!-- Display temp_birth.race start -->
        <td>
          <%= temp_birth.race %>
        </td>
        <!-- Display temp_birth.race end -->

        <!-- Display temp_birth.birthdate start -->
        <td>
          <%= temp_birth.birthdate %>
        </td>
        <!-- Display temp_birth.birthdate end -->

        <!-- Display temp_birth.created_at start -->
        <td>
          <%= time_ago_in_words(temp_birth.created_at) %> ago
        </td>
        <!-- Display temp_birth.created_at end -->

        <!-- Display temp_birth.updated_at start -->
        <td>
          <%= time_ago_in_words(temp_birth.updated_at) %> ago
        </td>
        <!-- Display temp_birth.updated_at end -->

        <td>
          <a href="/temp_births/<%= temp_birth.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
