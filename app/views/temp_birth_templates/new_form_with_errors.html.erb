<% if @temp_birth.present? %>
  <% if @temp_birth.errors.any? %>
    <% @temp_birth.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new temp birth
</h1>


<hr>

<form action="/create_temp_birth" method="post">

  <div class="form-group">
    <label for="earring_id">
      Earring
    </label>

    <input type="text" id="earring_id" name="earring_id" class="form-control" value="<%= @temp_birth.earring_id %>">
  </div>

  <div class="form-group">
    <label for="gender">
      Gender
    </label>

    <input type="text" id="gender" name="gender" class="form-control" value="<%= @temp_birth.gender %>">
  </div>

  <div class="form-group">
    <label for="mother_earring_id">
      Mother earring
    </label>

    <input type="text" id="mother_earring_id" name="mother_earring_id" class="form-control" value="<%= @temp_birth.mother_earring_id %>">
  </div>

  <div class="form-group">
    <label for="race">
      Race
    </label>

    <input type="text" id="race" name="race" class="form-control" value="<%= @temp_birth.race %>">
  </div>

  <div class="form-group">
    <label for="birthdate">
      Birthdate
    </label>

    <input type="text" id="birthdate" name="birthdate" class="form-control" value="<%= @temp_birth.birthdate %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create temp birth
  </button>
</form>

<hr>

<a href="/temp_births">
  Go back
</a>
