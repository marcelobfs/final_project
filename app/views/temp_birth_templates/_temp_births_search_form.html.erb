<%= search_form_for @q, :class => collapse_search_form, :id => "temp_births_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :earring_id, "Earring" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :earring_id_gteq, :class => "form-control", :placeholder => "Earring greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :earring_id_lteq, :class => "form-control", :placeholder => "Earring less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :birthdate, "Birthdate" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='birthdategteqPicker' data-target-input="nearest">
          <%= f.text_field :birthdate_gteq, :class => "form-control datetimepicker-input", :placeholder => "Birthdate greater than or equal to", :data => {:target => '#birthdategteqPicker'} %>
          <div class="input-group-append" data-target='#birthdategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='birthdatelteqPicker' data-target-input="nearest">
          <%= f.text_field :birthdate_lteq, :class => "form-control datetimepicker-input", :placeholder => "Birthdate less than or equal to", :data => {:target => '#birthdatelteqPicker'} %>
          <div class="input-group-append" data-target='#birthdatelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#birthdategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#birthdatelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#birthdategteqPicker').on("dp.change", function (e) {
              $('#birthdatelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#birthdatelteqPicker').on("dp.change", function (e) {
              $('#birthdategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :race_cont, "Race contains" %>
    <%= f.text_field :race_cont, :class => "form-control", :placeholder => "Race contains" %>
  </div>

  <div class="form-group">
    <%= f.label :mother_earring_id, "Mother earring" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :mother_earring_id_gteq, :class => "form-control", :placeholder => "Mother earring greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :mother_earring_id_lteq, :class => "form-control", :placeholder => "Mother earring less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender_cont, "Gender contains" %>
    <%= f.text_field :gender_cont, :class => "form-control", :placeholder => "Gender contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/temp_births" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#temp_births_filters">
  Show filters
</a>
